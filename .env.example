# GCP/GKE Project configuration
GCP_PROJECT=your-project
REGION=asia-northeast1

# Datastore/Storage
FIRESTORE_DB=townready
GCS_BUCKET=gs://your-bucket

# Vertex AI locations/models
VAI_LOCATION=asia-northeast1
GEMINI_MODEL=gemini-2.0-pro
IMAGEN_MODEL=imagen-3.0
VEO_MODEL=veo-2.0

# Knowledge Base dataset (Vertex AI Search)
KB_DATASET=kb_default
KB_SEARCH_LOCATION=global
KB_SEARCH_COLLECTION=default_collection
KB_SEARCH_DATASTORE=kb_default

# Pub/Sub
PUBSUB_TOPIC=townready-jobs

# Optional: local development helpers
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# API_PORT=8080
# WEB_PORT=3000
