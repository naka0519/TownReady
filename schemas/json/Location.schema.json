{
  "description": "Physical location metadata for a drill site.",
  "properties": {
    "address": {
      "description": "Human-readable address",
      "title": "Address",
      "type": "string"
    },
    "lat": {
      "description": "Latitude",
      "maximum": 90.0,
      "minimum": -90.0,
      "title": "Lat",
      "type": "number"
    },
    "lng": {
      "description": "Longitude",
      "maximum": 180.0,
      "minimum": -180.0,
      "title": "Lng",
      "type": "number"
    },
    "site_map_url": {
      "anyOf": [
        {
          "format": "uri",
          "maxLength": 2083,
          "minLength": 1,
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Optional URL to the site map",
      "title": "Site Map Url"
    },
    "geojson": {
      "anyOf": [
        {
          "type": "object"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Optional GeoJSON object",
      "title": "Geojson"
    }
  },
  "required": [
    "address",
    "lat",
    "lng"
  ],
  "title": "Location",
  "type": "object"
}